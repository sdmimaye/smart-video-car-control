<Window x:Class="SmartCarControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartCarControl"
        mc:Ignorable="d" Loaded="Window_Loaded" Closing="Window_Closing"
        Title="Smart-Car-Control" Height="400" Width="640" WindowStyle="SingleBorderWindow">
    <Grid>
        <MediaElement x:Name="Video"></MediaElement>
        <local:Steering x:Name="Camera" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="100"/>
        <local:Steering x:Name="Car" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="100" />
    </Grid>
</Window>
